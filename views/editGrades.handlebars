<div class="topnav">

  <div class="topnav-centered">
    <form action="/logTeach" method="post">
      <button type="text" id="home">Home</button>
    </form>
  </div>
  <div id="logout">
    <form action="/" method="post">
      <button id="logout-button" type="text">logout</button>
    </form>
  </div>
  <a onclick="history.back()">Back</a>
</div>

<div class="Gradetable">
  <div class="main">
    <table>
      <tr>
        <th>STUDENT</th>
        <th>ASSIGNMENT 1</th>
        <th>ASSIGNMENT 2</th>
        <th>FINAL EXAM</th>
      </tr>
      <form id="editGradesForm" action="/editGrades" method="post">
      {{#each StudentInClass}}
      <tr>
        <td>{{username}}</td>
        <td>
          <input form="editGradesForm" type="text" name="editGrade{{u_id}}" value={{grade1}}></input>
        </td>
        <td>
          <input form="editGradesForm" type="text" name="editGrade{{u_id}}" value={{grade2}}></input>
        </td>
        <td>
          <input form="editGradesForm" type="text" name="editGrade{{u_id}}" value={{grade3}}></input>
        </td>
      </tr>
      <input form="editGradesForm" type="hidden" name="editGrade{{u_id}}" value="{{u_id}}"></input>
      {{/each}}
      </form>
    </table>
  </div>
</div>

<div class="EditOptions">
    <button id="editGrades-button" type="text" form="editGradesForm">Save</button>
</div>